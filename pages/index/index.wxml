<!--index.wxml-->
<view class="container">
    <view class="top">
        <view class="swiper-wrapper">
            <swiper indicator-dots="{{true}}"
                    autoplay="{{true}}" interval="{{5000}}" duration="{{500}}">
                <block wx:for="{{swiperList}}" wx:key="url">
                    <swiper-item>
                        <image src="{{item.url}}" mode="widthFix" class="swiper-image"></image>
                    </swiper-item>
                </block>
            </swiper>
        </view>
        <map class="map" latitude="{{currentPosition.latitude}}" longitude="{{currentPosition.longitude}}"
             polyline="{{polyline}}" bind:tap="getClickPoint"
             show-location></map>
        <!--        <view class="gf"></view>-->
        <view class="shield" bind:tap="navigateTo" data-url="/pages/safety/safety">
            <image class="img" mode="widthFix" src="../../assets/images/shield.png"></image>
        </view>
        <view class="position" bind:tap="getCurrentPosition">
            <image class="img img-position" mode="widthFix" src="../../assets/images/positioning.png"></image>
        </view>
    </view>
    <view class="middle">
        <view class="tab">
            <text class="item">城际出行</text>
            <text class="item">定制班线</text>
            <text class="item">货物代送</text>
        </view>
        <view class="content">
            <view class="line1">
                <image class="dot item1" src="../../assets/images/blue_dot.png"></image>
                <text class="item2">{{locationAdd}}</text>
                <image class="item3" src="../../assets/images/next.png"></image>
            </view>
            <view class="line2">
                <input class="des" placeholder="请输入打车目的地" bind:blur="getDrivingLine"/>
                <image class="dot item1" src="../../assets/images/green_dot.png"></image>
            </view>
        </view>

    </view>


    <!--    <view class="gf" style="background-image: url('../../assets/images/gift_box_bg.png');">
            <view class="info">
                <text class="l">免费领取10元 </text>
                <text class="r">打车立减券</text>
            </view>
            <view class="btn">
                    立即领取
            </view>
        </view>-->

    <view style="display:flex;flex-direction:column;align-items:center">
        <button type="primary" style="margin-bottom:15rpx;" bind:tap="openPopup">乘车人信息</button>
        <button type="primary" style="margin-bottom:15rpx;" bind:tap="navigateTo"
                data-url="/pages/confirmOrder/confirmOrder">订单支付
        </button>
        <button type="primary" style="margin-bottom:15rpx;" bind:tap="navigateTo"
                data-url="/pages/dedicatedLine/dedicatedLine">定制专线
        </button>
        <button type="primary" style="margin-bottom:15rpx;" bind:tap="navigateTo"
                data-url="/pages/lineSchedule/lineSchedule">选择班次
        </button>
        <button type="primary" style="margin-bottom:15rpx;" bind:tap="navigateTo"
                data-url="/pages/paidSuccess/paidSuccess">支付成功
        </button>
    </view>

    <add-passenger show="{{showPopup}}"></add-passenger>
    <van-toast id="van-toast"/>
</view>
